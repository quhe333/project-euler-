public class Q2 {
      public static void main(String[] args)  {
    	  
    	  int sum = 0 ;
    	  int a  = 1;
    	  int b = 1;
    	  int c= 0;
    	  
    	  
    	  
    	  
    	  while ( a <= 4000000){
    		  c = b ;
    		  b = a +b ;
    		  a = c ;
    		  
    		  
    		  if (a%2==0)
    		  sum = sum + a ;
   }
    	  
    	  
     System.out.println(sum);
     
   
    
    	  
    	  
    	  
     	  
      }
	
	
	
	
	
}
